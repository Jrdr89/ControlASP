
@{
    ViewData["Title"] = "Contabilidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contabilidad del Hotel -->
<div class="container-fluid">

    <h1 class="h3 mb-0 text-gray-800">Contabilidad del Hotel</h1>

    <div class="row mt-4">

        <!-- Ingresos del Hotel -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Ingresos del Hotel</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6 class="m-0 font-weight-bold">Ingresos Totales</h6>
                            <p>$25,000</p>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="m-0 font-weight-bold">Ingresos por Servicios</h6>
                            <p>$10,000</p>
                        </div>
                        <!-- Otros campos de ingresos -->
                    </div>
                    <!-- Tabla de Ingresos por día -->
                    <div class="table-responsive mt-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Día</th>
                                    <th>Ingresos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Lunes</td>
                                    <td>$3,000</td>
                                </tr>
                                <tr>
                                    <td>Martes</td>
                                    <td>$2,500</td>
                                </tr>
                                <!-- Más filas de días -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gastos del Hotel -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Gastos del Hotel</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6 class="m-0 font-weight-bold">Gastos Totales</h6>
                            <p>$12,000</p>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="m-0 font-weight-bold">Gastos de Nómina</h6>
                            <p>$5,000</p>
                        </div>
                        <!-- Otros campos de gastos -->
                    </div>
                    <!-- Tabla de Gastos -->
                    <div class="table-responsive mt-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Categoría</th>
                                    <th>Gastos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Mantenimiento</td>
                                    <td>$1,500</td>
                                </tr>
                                <tr>
                                    <td>Publicidad</td>
                                    <td>$1,200</td>
                                </tr>
                                <!-- Más filas de gastos -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @* Resumen de Cuentas *@
        <div class="col-lg-12 mt-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">Resumen de Cuentas</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold">Cuentas Bancarias</h6>
                            <p>$50,000</p>
                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold">Caja</h6>
                            <p>$10,000</p>
                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold">Cuentas por Cobrar</h6>
                            <p>$7,000</p>
                        </div>
                        <div class="col-lg-3">
                            <h6 class="m-0 font-weight-bold">Cuentas por Pagar</h6>
                            <p>$3,000</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Informe de Impuestos *@
        <div class="col-lg-12 mt-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">Informe de Impuestos</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <h6 class="m-0 font-weight-bold">Impuestos a Pagar</h6>
                            <p>$5,000</p>
                        </div>
                        <div class="col-lg-8">
                            <h6 class="m-0 font-weight-bold">Detalles de Impuestos</h6>
                            <p>Impuesto sobre la Renta: $3,000</p>
                            <p>Impuesto sobre Ventas: $2,000</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
@*         Estado de Resultados *@
        <div class="col-lg-12 mt-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Estado de Resultados</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <h6 class="m-0 font-weight-bold">Ingresos Totales</h6>
                            <p>$30,000</p>
                        </div>
                        <div class="col-lg-4">
                            <h6 class="m-0 font-weight-bold">Ganancias Netas (Pérdidas)</h6>
                            <p>$7,000</p>
                        </div>
                        <div class="col-lg-4">
                            <h6 class="m-0 font-weight-bold">Beneficio Bruto</h6>
                            <p>$20,000</p>
                        </div>
                    </div>
                    <div class="mt-4">
                        <h6 class="m-0 font-weight-bold">Desglose de Gastos y Otros Costos</h6>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Categoría</th>
                                    <th>Gastos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Nómina</td>
                                    <td>$8,000</td>
                                </tr>
                                <tr>
                                    <td>Mantenimiento</td>
                                    <td>$1,500</td>
                                </tr>
                                <tr>
                                    <td>Publicidad</td>
                                    <td>$1,200</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

